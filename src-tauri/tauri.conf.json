{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "Adventure Log",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "fs": {
        "all": true,
        "scope": ["$RESOURCE/*"]
      },
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "resources": ["resources/data.json"],
      "category": "Productivity",
      "active": true,
      "targets": "all",
      "identifier": "com.adventure.log",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Adventure log",
        "width": 800,
        "height": 600,
        "fileDropEnabled": false
      }
    ]
  }
}
